<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txtStudentIdRecord"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtStudentNameRecord"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtProgramRecord"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtMarkCourse1Record"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtMarkCourse2Record"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtMarkCourse3Record"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtMarkCourse4Record"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtTotalMarksRecord"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:textColor="@color/black"/>
</LinearLayout>